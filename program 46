//* to find diameter, circumference, area of a circle using function

#include <stdio.h>

void Calcda(float r)
{
    float d = 0, c = 0, a = 0;
   
    d = 2 * r;
    c = 2 * 3.14 * r;
    a = 3.14 * (r * r);

    printf("\n");
    printf("Diameter      :: = %f units \n", d);
    printf("Circumference :: = %f units \n", c);
    printf("Area          :: = %f sq. units ", a);
}

int main()
{
    float r; 

    printf("Enter the radius of the circle::\n");
    scanf("%f", &r);

    Calcda(r);
   
    return 0;

}
