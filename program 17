//* to print all even numbers and sum of it from 1 to n
#include<stdio.h>
int main()
{
  int n, sum=0;
  
  printf("Enter the upto number:");
  scanf("%d",&n);
  
  for(int i=1; i<=n; i++)
  {   
     if((i%2)==0)
     {
       printf("%d",n);
     }
  }
   
    for(i=2; i<=n; i+=2)
    {
        sum += i;
    }

    printf("Sum of all even number between 1 to %d = %d", n, sum);

    return 0;
}
