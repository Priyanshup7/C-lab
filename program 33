//* to insert an element in an array at specified position
#include <stdio.h>
 int main()
{
    int i, x, pos, n;
   
    printf("Enter the size of array:");
    scanf("%d", &n);
    
    int arr[n];
    
    for (i = 0; i < n; i++)
    {
       arr[i] = i + 1;
    }
    for (i = 0; i < n; i++)
    {
       printf("%d ", arr[i]);
       printf("\n");
    }
    
    printf("Enter the element:");
    scanf("%d",&x);
  
    printf("Enter the position");
    n++;
 
    for (i = n - 1; i >= pos; i--)
    {
       arr[i] = arr[i - 1];
     }
    
    arr[pos - 1] = x;
 
     for (i = 0; i < n; i++)
     {
        printf("%d ", arr[i]);
        printf("\n");
     } 
 
     return 0;

}
